{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "strictNullChecks": true,
    "strict": true,
    "composite": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "isolatedDeclarations": true,
    "paths": {
      "tailwindcss/types/config": ["node_modules/tailwindcss/types/config.d.ts"],
      "plugins/lynx": ["src/plugins/lynx/index.ts"],
    },
    "moduleResolution": "nodenext",
  },
  "include": [
    "src",
  ],
}
