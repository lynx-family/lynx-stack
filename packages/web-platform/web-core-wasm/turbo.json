{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:wasm": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "scripts/**", "Cargo.toml", "package.json"],
      "outputs": ["binary/**"]
    },
    "build": {
      "dependsOn": ["build:wasm", "^build"],
      "inputs": ["src/**", "ts/**", "index.css", "*.ts"],
      "outputs": ["dist/**"]
    }
  }
}
