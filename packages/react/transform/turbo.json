{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:debug": {
      "inputs": ["crates/**/*.rs", "crates/**/Cargo.toml", "src/**/*.rs", "build.rs", "Cargo.toml"],
      "outputs": ["index.d.ts", "index.cjs", "*.node"]
    },
    "build:wasm": {
      "dependsOn": [],
      "inputs": [
        "crates/**/*.rs",
        "crates/**/Cargo.toml",
        "src/**/*.rs",
        "src/wasm.js",
        "build.rs",
        "Cargo.toml",
        "scripts/build_wasm.sh"
      ],
      "outputs": ["dist/wasm.cjs"]
    },
    "build": {
      "dependsOn": [
        "build:wasm"
      ]
    }
  }
}
